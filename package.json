{
  "name": "merp-tools",
  "version": "0.1.0",
  "description": "Tools for MERP games",
  "type": "module",
  "private": true,
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  },
  "scripts": {
    "build": "rollup -c rollup.config.dev.js",
    "build:dist": "cross-env NODE_ENV=production rollup -c rollup.config.dist.js",
    "watch": "rollup -c rollup.config.dev.js --watch",
    "serve": "http-server"
  },
  "keywords": [
    "merp",
    "rpg"
  ],
  "author": "raohmaru",
  "license": "MIT",
  "dependencies": {
    "cross-env": "^7.0.3",
    "rollup": "^3.15.0",
    "vue": "^3.2.47",
    "vue-i18n": "^9.2.2"
  },
  "devDependencies": {
    "@rollup/plugin-alias": "^4.0.3",
    "@rollup/plugin-node-resolve": "^15.0.1",
    "@rollup/plugin-replace": "^5.0.2",
    "@rollup/plugin-terser": "^0.4.0",
    "@vue/compiler-sfc": "^3.2.47",
    "http-server": "^14.1.1",
    "rollup-plugin-vue": "^6.0.0"
  }
}
